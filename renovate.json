{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":automergePatch",
    ":automergeDigest"
  ],
  "labels": ["Dependencies", "renovate"],
  "vulnerabilityAlerts": {
    "labels": [
      "Security"
    ]
  },
  "dependencyDashboard": true,
  "dockerfile": {
    "fileMatch": [
      "(^|/)Dockerfile-[^/]*$"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "groupName": "Node.js",
      "matchPackageNames": [
        "node", "@types/node"
      ]
    },
    {
      "groupName": "ESLint families",
      "extends": ["packages:eslint"],
      "matchPackageNames": ["eslint"]
    },
    {
      "groupName": "Prettier families",
      "matchPackagePatterns": [
        "^prettier"
      ]
    },
    {
      "groupName": "Stylelint families",
      "matchPackagePatterns": [
        "stylelint"
      ]
    },
    {
      "groupName": "React families",
      "matchPackagePrefixes": [
        "@types/react",
        "react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "GraphQL families",
      "matchPackagePrefixes": [
        "@graphql",
        "graphql",
        "@apollo"
      ]
    },
    {
			"groupName": "storybook families",
			"matchPackagePrefixes": ["@storybook", "storybook"]
		},
    {
			"groupName": "Testing families",
      "matchPackagePatterns": [
        "jest"
      ],
			"matchPackagePrefixes": [
				"@testing-library",
				"react-test-renderer",
				"vitest",
				"@vitejs"
			],
			"matchPackageNames": [
				"@types/jest",
				"@types/mocha",
				"@types/react-test-renderer"
			]
		},
    {
      "groupName": "TypeScript families",
      "matchPackagePatterns": [
        "typescript"
      ],
      "matchPackagePrefixes": [
        "ts-"
      ]
    },
    {
      "groupName": "Terraform families",
      "matchDepNames": [
        "hashicorp/terraform",
        "hashicorp/terraform-provider-aws",
        "hashicorp/terraform-provider-google",
        "google/cloud-sdk",
        "hashicorp/setup-terraform",
        "reviewdog/action-tflint"
      ],
      "matchPackageNames": ["terraform", "terraform-version"]
    }
  ]
}

